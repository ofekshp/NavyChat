{
  "compilerOptions": {
    "target": "ES6",                       // Specify ECMAScript target version
    "module": "commonjs",                  // Node.js uses CommonJS module system
    "outDir": "./dist",                    // Output folder for compiled files
    "rootDir": "./src",                    // Root folder for TypeScript files
    "strict": true,                        // Enable all strict type checks
    "esModuleInterop": true,               // Allow default imports from CommonJS modules
    "skipLibCheck": true,                  // Skip checking type declarations in node_modules
    "forceConsistentCasingInFileNames": true // Ensure consistent file naming
  },
  "include": ["src"],                      // Include TypeScript files in the 'src' folder
  "exclude": ["node_modules"]              // Exclude dependencies
}
